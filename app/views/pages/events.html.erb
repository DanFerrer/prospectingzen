<%= render 'layouts/nav_sheets' %>
<div class="content-events">
		<h3>Enter your event information</h3>

			<p>Your assistant will take this and find the contacts attending this event.</p>



<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h3>Event Information</h3>
    </div>
  </div>
<div class="panel-body">
    <%= simple_form_for @events do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :eventname %>
      <%= f.input :eventlocation %>
      <%= f.input :eventnotes %>
      <%= f.input :eventdate %>
      <%= f.button :submit %>
      
      <div class="form-group">
        <% f.label :eventname %>
        <%= f.text_field :eventname, class: "form-control", placeholder:"Event Name", :autofocus => true %>
      </div>
      <div class="form-group">
        <% f.label :eventlocation %>
        <%= f.text_field :eventlocation, class: "form-control", placeholder:"Event Location", :autofocus => true %>
      </div>
      <div class="form-group">
        <% f.label :eventnotes %>
        <%= f.text_field :eventnotes, class: "form-control", placeholder:"Additional notes about the Event or this assignment", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.submit "Send task to freelancer", class: "btn btn-primary input-block-level" %>
      </div>

    <% end %>
</div>
  <div class="panel-footer">

  </div>
</div>
<!-- close container div -->
</div>   