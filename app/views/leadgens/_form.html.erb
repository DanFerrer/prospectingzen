<%= simple_form_for @leadgen, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :companies %>
    <%= f.input :deadline, :as => "string" %>
    <%= f.input :leadsper, :label => "Number of leads per company", :placeholder => "Enter a number" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => "Get some leads!" %>
  </div>
<% end %>
