<%= simple_form_for @event, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :eventname, :label => "Event Name" %>
    <%= f.input :eventlocation, :label => "Location of the Event" %>
    <%= f.input :eventdate, :label => "Date of the Event" %>
    <%= f.input :eventnotes, :label => "Any notes about the Event" %>
    <%= f.input :deadline, :label => "Assignment Deadline" %>



  </div>

<!--  <div class="form-group">
    <%= f.label :spreadsheet %>
    <%= f.file_field :image, class: "form-control" %>
  </div>-->

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <br />
<% end %>
