<%= simple_form_for(@contact, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :title %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :linkedin %>
    <%= f.input :twitter %>
    <%= f.input :facebook %>
    <%= f.input :birthday %>
    <%= f.input :previouscompany %>
    <%= f.input :notes %>
    <%= f.input :personalnote %>
    <%= f.input :duedate %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
