<%= simple_form_for(@contact, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :title %>
    <%= f.input :duedate, :as => "string", :label =>"Assignment Deadline"  %>
        
       <% if current_page?(new_contact_path) %> 
        <p class="center">Your freelancer can take it from here.</p>
        <% else %>
       <% end %> 
        
    <div class="form-actions center">
        <%= f.button :submit %>
    </div>

    <hr>

    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :linkedin, :label => "LinkedIn" %>
    <%= f.input :twitter %>
    <%= f.input :facebook %>
    <%= f.input :birthday %>
    <%= f.input :previouscompany, :label => "Previous Company" %>
    <%= f.input :notes, :placeholder => "e.g. We met at CES and talked about 3D printing"%>
    <%= f.input :personalnote, :label => "Personal Notes", :placeholder => "e.g. Avid jogger, big Knick fan, etc" %>
    



  <br />
<% end %>
